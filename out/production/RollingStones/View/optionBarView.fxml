<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<HBox minWidth="1600" minHeight="40" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.OptionBarController" >
    <MenuBar fx:id="MenuBarOption"  BorderPane.alignment="BASELINE_LEFT"  minHeight="40" minWidth="1600"  prefWidth="1920">
        <menus>
            <Menu  fx:id="sceneMenu" text="Szene">
                <items >
                    <MenuItem  fx:id="sceneMenuDelete" text="Delete"/>
                    <MenuItem fx:id="sceneMenuLoad" text="Load Scene"/>
                </items>
            </Menu>
            <Menu text="Objekt">
                <items>
                    <MenuItem fx:id="createObject"   text="Create Object"/>
                    <MenuItem fx:id="createCustomObject"  text="Create Custom Object"/>
                    <MenuItem fx:id="scaleObject" text="Scale Object"/>
                    <MenuItem fx:id="rotateObject" text="Rotate Object"/>
                    <MenuItem fx:id="translateObject"  text="Translate Object"/>
                    <MenuItem fx:id="copyObject"  text="Copy Object"/>
                    <MenuItem fx:id="deleteObject" text="Delete Object"/>
                </items>
            </Menu>
            <Menu text="Fenster">
                <items>
                    <MenuItem fx:id="elementWindow" onAction="#openElementWindow" text="Element Window" />
                    <MenuItem fx:id="advancedOptions" onAction="#openAdvancedOption" text="Advanced Options" />
                    <MenuItem fx:id="help" onAction="#openHelp" text="Help" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
</HBox>

