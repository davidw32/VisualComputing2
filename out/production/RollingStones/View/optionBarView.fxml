<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<?import javafx.scene.control.SeparatorMenuItem?>
<MenuBar minHeight="20.0" minWidth="1600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.OptionBarController">
    <menus>
        <Menu  fx:id="sceneMenu" text="Szene">
            <items >
                <MenuItem onAction="#sceneStart"  fx:id="sceneMenuStart" text="Start Scene"/>
                <MenuItem onAction="#sceneRestart" fx:id="sceneMenuRestart" text="Restart Scene"/>
                <MenuItem onAction="#scenePause" fx:id="sceneMenuPause" text="Pause Scene"/>
                <SeparatorMenuItem  />
                <MenuItem   onAction="#goBack" text="Exit Scene"/>
            </items>
        </Menu>
        <Menu text="Objekt">
            <items>
                <MenuItem fx:id="copyObject" onAction="#copyObject" text="Copy Object"/>
                <MenuItem fx:id="deleteObject" onAction="#deleteObject"  text="Delete Object"/>
            </items>
        </Menu>
        <Menu text="Fenster">
            <items>
                <MenuItem fx:id="toolWindow" onAction="#opentoolWindow" text="Element Window" />
                <MenuItem fx:id="advancedOptions"  onAction="#openAdvancedOption" text="Advanced Options" />
                <MenuItem fx:id="help" onAction="#openHelp" text="Help" />
            </items>
        </Menu>
    </menus>
</MenuBar>
