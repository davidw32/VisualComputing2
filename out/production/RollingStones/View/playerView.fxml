<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Circle?>
<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.PlayerController" minHeight="60" minWidth="1600" >
    <GridPane alignment="CENTER"  minWidth="1300">
        <columnConstraints>
            <ColumnConstraints  percentWidth="30.0" />
            <ColumnConstraints  percentWidth="5.0" />
            <ColumnConstraints  percentWidth="5.0" />
            <ColumnConstraints  percentWidth="5.0" />
            <ColumnConstraints  percentWidth="5.0" />
            <ColumnConstraints  percentWidth="5.0" />
            <ColumnConstraints  percentWidth="10.0" />
            <ColumnConstraints  percentWidth="30.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints  percentHeight="100.0"  />
        </rowConstraints>

        <children>
            <Label fx:id="timeFactorText" GridPane.columnIndex="0">1x</Label>
            <Button  GridPane.columnIndex="1" alignment="BASELINE_CENTER"  minWidth="40" onAction="#decreaseAnimationSpeed" minHeight="40" style="-fx-background-color: grey;-fx-cursor: hand;"  >
                <graphic>
                    <Label>slower</Label>
                </graphic>
            </Button>
            <Button  GridPane.columnIndex="2" alignment="BASELINE_CENTER" onAction="#increaseAnimationSpeed"  minWidth="40" minHeight="40" style="-fx-background-color: grey;-fx-cursor: hand;" >
                <graphic>
                    <Label>faster</Label>
                </graphic>
            </Button>
            <Button GridPane.columnIndex="3" minWidth="30" minHeight="30" onAction="#startSimulation" style="-fx-background-color: grey;-fx-cursor: hand;" fx:id="start"   >
                <graphic>
                    <GridPane alignment="CENTER">
                        <HBox visible="false" fx:id="pauseIcon" spacing="5" alignment="CENTER">
                            <Rectangle height="15" width="8"></Rectangle>
                            <Rectangle height="15" width="8"></Rectangle>
                        </HBox>
                        <Polygon translateX="8" fx:id="playIcon" visible="true" scaleX="3" scaleY="3">
                            <points>
                                <Double fx:value="0.0" />
                                <Double fx:value="4.0" />
                                <Double fx:value="5.0" />
                                <Double fx:value="7.0" />
                                <Double fx:value="0.0" />
                                <Double fx:value="10.0" />
                            </points>
                        </Polygon>
                    </GridPane>
                </graphic>
            </Button>
            <Button  GridPane.columnIndex="4" alignment="BASELINE_CENTER" onAction="#resetSimulation" minWidth="40" minHeight="40" style="-fx-background-color: grey;-fx-cursor: hand;"  >
                <graphic>
                    <Label>Reset</Label>
                </graphic>
            </Button>
            <Button  GridPane.columnIndex="5" alignment="BASELINE_CENTER"  onAction="#stopSimulation" minWidth="40" minHeight="40" style="-fx-background-color: grey;-fx-cursor: hand;"   >
                <graphic>
                    <Rectangle  height="15" width="15"></Rectangle>
                </graphic>
            </Button>
            <Label alignment="BASELINE_CENTER" GridPane.columnIndex="6"  fx:id="clock"  text="00:00:00"  ></Label>
        </children>

    </GridPane>

</HBox>
